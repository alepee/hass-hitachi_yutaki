#!/usr/bin/env bash
set -e
cd "$(dirname "$0")/.."

# System dependencies (Linux dev container only)
if command -v apt-get &> /dev/null; then
    sudo apt-get update
    sudo apt-get install -y --no-install-recommends \
        libpcap-dev \
        libturbojpeg0 \
        ffmpeg
fi

uv sync --group dev
uv run pre-commit install
